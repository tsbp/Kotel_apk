<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setbackground">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnDel"
        android:background="@drawable/bdel"
        android:layout_below="@+id/lvMain"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAdd"
        android:background="@drawable/badd"
        android:layout_below="@+id/lvMain"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp" />

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ListView>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnSave"
        android:background="@drawable/bsave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnLoad"
        android:background="@drawable/bload"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/confResponse"
        android:layout_below="@+id/lvMain"
        android:layout_above="@+id/btnSave"
        android:gravity="center"/>

    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/pbConfig"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>